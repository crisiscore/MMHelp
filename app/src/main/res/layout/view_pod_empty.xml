<?xml version="1.0" encoding="utf-8"?>
<com.imei.mmhelp.view.pods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivEmptyImage"
        android:contentDescription="@string/dummy_title"
        android:layout_width="@dimen/empty_size"
        android:src="@drawable/ic_disabled"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/empty_size" />

    <org.mmtextview.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvEmpty"
        android:layout_below="@+id/ivEmptyImage"
        android:textColor="@color/primarayText"
        android:text="@string/dummy_error"
        android:textSize="@dimen/text_regular_2x"
        android:layout_marginTop="@dimen/margin_medium_2"/>

</com.imei.mmhelp.view.pods.EmptyViewPod>